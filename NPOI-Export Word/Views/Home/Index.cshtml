@{
    ViewData["Title"] = "NPOI导出Word文档示例";
}

<div class="text-center">
    <h1 class="display-4"><button class="btn-block" onclick="wordExport()">导出并保存Word</button></h1>
</div>
<script type="text/javascript">

    function wordExport() {
        $.ajax({
            async: true,
            dataType: "json",
            type: "post",
            url: "@Url.Action("WordExport","Home")",
            success: function(res) {
                if (res.code == 1) {
                    window.location.href = res.data;
                } else {
                    alert(res.data);
                }
            }
        });
    }
</script>